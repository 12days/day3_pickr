<!DOCTYPE html>
<html>
<head>
  <title>Pickr</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
<% if signed_in? %>
  <%= link_to('[logout]', :destroy_user_session, method: :delete) %>
  <%= link_to('[upload]', :new_upload) %>
<% else %>
  <%= link_to('[login]', :user_session, method: :post) %>
<% end %>
<%= link_to('[pictarrgghs]', :uploads) %>
<%= link_to('[friends pictarrgghs]', friends_uploads_path) %>
<%= signed_in? ? link_to('[profile]', profile_path(current_user)) : "" %>
<br>
    <%= yield %>

  </div>
</body>
</html>
